<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="PaperlessFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">ODBM\Paperless\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">ODBM\Paperless\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">PaperlessValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">PaperlessCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="PaperlessConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">ODBM\Paperless\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <!-- Logger, initialized with PaperlessConfig -->
    <virtualType name="PaperlessLogger" type="Psr\Log\LoggerInterface">
        <arguments>
            <argument name="config" xsi:type="object">PaperlessConfig</argument>
        </arguments>
    </virtualType>

    <type name="Magento\Paperless\Gateway\Http\Client\ClientMock">
        <arguments>
            <argument name="logger" xsi:type="object">PaperlessLogger</argument>
        </arguments>
    </type>

    <type name="Magento\Payment\Model\Method\Adapter">
        <plugin name="context_markers_capture" type="ODBM\Paperless\Plugin\ContextCapture" sortOrder="1" />
    </type>
    <type name="Magento\Paypal\Model\Express">
        <plugin name="context_markers_capture_paypal" type="ODBM\Paperless\Plugin\ContextPaypalCapture" sortOrder="1" />
    </type>
    <type name="ODBM\Paperless\Gateway\Request\CaptureRequest">
        <plugin name="pre_profile_recurring" type="ODBM\Paperless\Plugin\ProfileCapture" sortOrder="1" />
    </type>

    <!-- Commands infrastructure -->
    <virtualType name="PaperlessCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">PaperlessAuthorizeCommand</item>
                <item name="capture" xsi:type="string">PaperlessCaptureCommand</item>
                <item name="void" xsi:type="string">PaperlessVoidCommand</item>
                <item name="refund" xsi:type="string">PaperlessVoidCommand</item>
                <item name="profile" xsi:type="string">PaperlessProfileCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize command -->
    <virtualType name="PaperlessAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">PaperlessAuthorizationRequest</argument>
            <argument name="handler" xsi:type="object">ODBM\Paperless\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">ODBM\Paperless\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">ODBM\Paperless\Gateway\Http\Client\TransactClient</argument>
        </arguments>
    </virtualType>

    <!-- Authorization Request -->
    <virtualType name="PaperlessAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">ODBM\Paperless\Gateway\Request\AuthorizationRequest</item>
                <item name="mockData" xsi:type="string">ODBM\Paperless\Gateway\Request\MockDataRequest</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Paperless\Gateway\Request\AuthorizationRequest">
        <arguments>
            <argument name="config" xsi:type="object">PaperlessConfig</argument>
        </arguments>
    </type>

    <!-- Capture command -->
    <virtualType name="PaperlessCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">ODBM\Paperless\Gateway\Request\CaptureRequest</argument>
            <argument name="handler" xsi:type="object">ODBM\Paperless\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">ODBM\Paperless\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">ODBM\Paperless\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">ODBM\Paperless\Gateway\Http\Client\TransactClient</argument>
        </arguments>
    </virtualType>

    <!-- Capture Request -->
    <type name="Magento\Paperless\Gateway\Request\CaptureRequest">
        <arguments>
            <argument name="config" xsi:type="object">PaperlessConfig</argument>
        </arguments>
    </type>

    <!-- Void command -->
    <virtualType name="PaperlessVoidCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">ODBM\Paperless\Gateway\Request\VoidRequest</argument>
            <argument name="handler" xsi:type="object">ODBM\Paperless\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">ODBM\Paperless\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">ODBM\Paperless\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">ODBM\Paperless\Gateway\Http\Client\TransactClient</argument>
        </arguments>
    </virtualType>

    <!-- Refund command -->
    <virtualType name="PaperlessRefundCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">ODBM\Paperless\Gateway\Request\VoidRequest</argument>
            <argument name="handler" xsi:type="object">ODBM\Paperless\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">ODBM\Paperless\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">ODBM\Paperless\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">ODBM\Paperless\Gateway\Http\Client\TransactClient</argument>
        </arguments>
    </virtualType>

    <!-- Void Request -->
    <type name="Magento\Paperless\Gateway\Request\VoidRequest">
        <arguments>
            <argument name="config" xsi:type="object">PaperlessConfig</argument>
        </arguments>
    </type>


    <!-- Profile command -->
    <virtualType name="PaperlessProfileCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">PaperlessProfileRequest</argument>
            <argument name="handler" xsi:type="object">PaperlessResponseHandlerComposite</argument>
            <argument name="transferFactory" xsi:type="object">ODBM\Paperless\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">ODBM\Paperless\Gateway\Http\Client\TransactClient</argument>
        </arguments>
    </virtualType>

    <!-- Profile Request -->
    <virtualType name="PaperlessProfileRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">ODBM\Paperless\Gateway\Request\ProfileRequest</item>
                <item name="mockData" xsi:type="string">ODBM\Paperless\Gateway\Request\MockDataRequest</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Paperless\Gateway\Request\ProfileRequest">
        <arguments>
            <argument name="config" xsi:type="object">PaperlessConfig</argument>
        </arguments>
    </type>


    <!-- Response handlers -->
    <virtualType name="PaperlessResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="txnid" xsi:type="string">ODBM\Paperless\Gateway\Response\TxnIdHandler</item>
                <item name="fraud" xsi:type="string">ODBM\Paperless\Gateway\Response\FraudHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Value handlers infrastructure -->
    <virtualType name="PaperlessValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">PaperlessConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="PaperlessConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">PaperlessConfig</argument>
        </arguments>
    </virtualType>

    <type name="Magento\Paperless\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">PaperlessConfig</argument>
        </arguments>
    </type>

</config>