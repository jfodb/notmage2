<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <title>My Saved Cards</title>
        <css src="Cryozonic_StripePayments::css/cryozonic_stripe.css" />
        <css src="Cryozonic_StripePayments::css/cryozonic_stripe_elements.css" />
        <css src="Cryozonic_StripePayments::css/paymentfont.min.css" />
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Cryozonic\StripePayments\Block\Customer\Cards" name="customer_cards" template="customer/cards.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
