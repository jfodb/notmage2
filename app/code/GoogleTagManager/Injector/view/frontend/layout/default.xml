<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.additional">
            <block class="Magento\Framework\View\Element\Template" name="gtm_head" before="-"
                   template="GoogleTagManager_Injector::gtm_head.phtml"/>
        </referenceBlock>

        <referenceContainer name="after.body.start">
            <block class="Magento\Framework\View\Element\Template" name="gtm_body" before="-" template="GoogleTagManager_Injector::gtm_body.phtml" />
        </referenceContainer>
    </body>
</page>